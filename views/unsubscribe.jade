extends layout

block content
    div(class='wrapper')
        h1= title
        form(method='post', action='', role="form")
            +form-field('email', 'Mail:', 'mail', 'mail', 'Enter your mail address', false)
            +form-field('key', 'API key (optional):', 'key', 'key', 'Paste your API key here or leave blank to remove all subscriptions.', false)
            button(type='submit').submit-button.btn-primary Unsubscribe